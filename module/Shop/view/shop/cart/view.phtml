<h2>Shopping Cart</h2>
<?php if ($this->cart()->countItems()): ?>
<form method="post" action="<?=$this->url('shop/cart', array(
	'action' => 'update'
));?>">
    <table class="table table-striped">
    	<tr>
    		<th>Product</th>
    		<th>Description</th>
    		<th>Price</th>
    		<th>Quantity</th>
    		<th>Total</th>
    		<th>&nbsp;</th>
    	</tr>
    	<?php foreach ($this->cart()->getCart() as $item): ?>
    	<tr>
    		<td><?=$item->name;?></td>
    		<td><?=$item->category;?> / <?=$item->description;?></td>
    		<td><?=$this->cart()->formatAmount($item->price);?></td>
    		<td>
    			<input type="number" name="quantity[<?=$item->productId;?>]" class="input-mini" value="<?=$item->qty;?>">
    		</td>
    		<td><?=$this->cart()->formatAmount($item->getLineCost());?></td>
    		<td><a href="<?=$this->url('shop/cart', array(
    			'action'	=> 'remove',
    			'id'		=> $item->productId
    		));?>"><?=$this->ztbIcon('remove');?></a>
    	</tr>
    	
    	<?php endforeach; ?>
    	
    </table>
    <div class="text-center">
    	<button name="update" class="btn" value="update">Update Cart</button>
    	<a href="<?=$this->url('shop/checkout');?>" class="btn">Check Out</a>
    	<a href="<?=$this->url('shop/cart', array(
    		'action' => 'empty'
    	));?>" class="btn">Empty Cart</a>
    </div>
</form>
<?php else: ?>
<div>
	<h4>No Items In Shopping Cart</h4>
</div>
<?php endif; ?>
